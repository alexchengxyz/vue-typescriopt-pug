{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "types.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/**/*.json"
  ],
  "exclude": ["src/**/__tests__/*"],
  "vueCompilerOptions": {
    "plugins": ["@volar/vue-language-plugin-pug"]
  },
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["./src/assets/styles/*"],
      "@theme/*": ["./src/assets/theme/*"],
    }
  }
}
